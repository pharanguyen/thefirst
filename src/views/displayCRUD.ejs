<!DOCTYPE html>
<html>

<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .btn-edit {
            background: orange;
            cursor: pointer;
        }

        .btn-delete {
            background: red;
            cursor: pointer;
        }
    </style>
</head>

<body>

    <h2>Get All User</h2>

    <table>
        <tr>
            <th>Email</th>
            <th>FisrtName</th>
            <th>lastName</th>
            <th>Address</th>
            <th>Action</th>

        </tr>

        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id%>" class="btn-edit" type="button"> Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id%>" class="btn-delete" type="button"> Delete</a>
                </td>
            </tr>
            <% } %>
    </table>

</body>

</html>